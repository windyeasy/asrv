{
  "name": "asrv",
  "type": "module",
  "version": "0.0.1",
  "description": "A server-side tool that assists front-end development.",
  "author": "windyeasy <windyeasy13gb@163.com>",
  "license": "MIT",
  "homepage": "https://github.com/asrv/#readme",
  "bugs": "https://github.com/asrv/issues",
  "keywords": [],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "asrv": "bin/cli.mjs"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "dist",
    "packages/web/dist"
  ],
  "scripts": {
    "dev": "rimraf dist && tsdown --watch",
    "start": "concurrently 'npm run dev' 'npm run dev-run'",
    "build": "rimraf dist && tsdown",
    "dev-run": "nodemon dist/index.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix"
  },
  "dependencies": {
    "@windyeasy/json-server": "1.0.0-beta.3-fork.1",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "http-proxy-middleware": "^3.0.5",
    "lowdb": "^7.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.14.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.1.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "tsc": "^2.0.4",
    "tsdown": "^0.12.7",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3",
    "unconfig": "^7.3.2",
    "vitest": "^3.2.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix",
    "packages/*/{src,types}/**/*.ts": [
      "eslint --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --fix"
    ],
    "playground/**/__tests__/**/*.ts": [
      "eslint --fix"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
